<h2>Posts</h2>

<%= image_tag "http://placekitten.com/g/200/300", alt: "Bookis Elements of Style" %>

<%= format_money(1025) %>

<% @posts.each do |post| %>
  <article>
    <h3><%= post.title %></h3>

    <%= post.content %>
    <%= link_to "Edit", edit_post_path(post.id) %>
    <hr>
    <%= button_to "Delete", "/posts", method: :delete %>
  </article>
<% end %>

<%= link_to "New Post", new_post_path, class: "new-post"%>
